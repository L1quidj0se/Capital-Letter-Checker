{
  "name": "capital-letter-checker",
  "displayName": "Capital Letter Checker",
  "description": "Every capital letter in a different colour!",
  "version": "0.0.1",
  "publisher": "L1JB",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:plaintext",
    "onLanguage:yaml",
    "onLanguage:json",
    "onLanguage:terraform",
    "onLanguage:tfvars",
    "onLanguage:markdown",
    "onLanguage:html",
    "onLanguage:xml",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:python",
    "onLanguage:java",
    "onLanguage:csharp",
    "onLanguage:cpp",
    "onLanguage:go",
    "onLanguage:ruby",
    "onLanguage:php",
    "onLanguage:rust",
    "onLanguage:perl",
    "onLanguage:swift",
    "onLanguage:kotlin",
    "onLanguage:dart",
    "onLanguage:lua",
    "onLanguage:sh",
    "onLanguage:bat",
    "onLanguage:powershell"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "capital-letter-checker.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "capital-letter-checker.toggleHighlight",
        "title": "Toggle Highlight Capitals"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Capital Letter Checker",
      "properties": {
        "capitalLetterChecker.highlightColor": {
          "type": "string",
          "default": "red",
          "description": "Color to use for highlighting capital letters."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
